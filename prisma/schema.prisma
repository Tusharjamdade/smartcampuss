generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int        @id @default(autoincrement())
  name            String
  email           String     @unique
  phone           String     @unique
  password        String
  confirmpassword String
  role            String     @default("user")
  store           Store?
  printjob        PrintJob[]
}

model Store {
  id        Int    @id @default(autoincrement())
  storeName String
  location  String
  user      User   @relation(fields: [userId], references: [id])
  userId    Int    @unique
}

model PrintJob {
  id            Int     @id @default(autoincrement())
  paymentAmount Int
  document      Bytes
  isCompleted   Boolean @default(false)
  format        String  
  colour        String  @default("black-white")
  user          User    @relation(fields: [userId], references: [id])
  userId        Int     @unique
}
